@using SistemasWeb01.ViewModels
@model ProductoListViewModel
<p class="aProduct">
    <a asp-action="Agregar" class="aNewProduct">Create New Product</a>
</p>

<div id="categorias">
    <button class="btn-categoria btn-todos" data-id="todos">Mostrar Todos</button>
    @foreach (var categoria in Model.categorias)
    {
        <button class="btn-categoria" data-id="@categoria.categoriaId">@categoria.categoriaNombre</button>
    }
</div>



<div class="contenedor">
    @foreach (var producto in Model.productos)
    {
        <partial name="_productoCard" model="producto" />
    }
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('.btn-categoria').click(function () {
            var categoriaId = $(this).data('id');
            if (categoriaId === 'todos') {
                $('.widget').show(); // Corregir la clase a 'widget'
            } else {
                $('.widget').hide(); // Corregir la clase a 'widget'
                $('.widget[data-categoria="' + categoriaId + '"]').show(); // Corregir la clase a 'widget'
            }
        });
    });
</script>
<script>
    ScrollReveal().reveal('.headline', { duration: 2000 });
    ScrollReveal().reveal('.widget', { interval: 200 });
</script>
