@using SistemasWeb01.ViewModels
@model ViewModel

<h1>Registro De Productos</h1>
<form asp-action="Agregar" enctype="multipart/form-data" method="post" role="form">
    
    <div class="contenedorPadre">
        <div class="contenedor">
            <div class="form-group">
                <label>Nombre</label>
                <input asp-for="productoClass.productoNombre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="productoClass.precio"></label>
                <input asp-for="productoClass.precio" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="productoClass.marca"></label>
                <input asp-for="productoClass.marca" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="productoClass.modelo"></label>
                <input asp-for="productoClass.modelo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="productoClass.detalle"></label>
                <input asp-for="productoClass.detalle" class="form-control" />
            </div>
            
            <div class="form-group">
                <label asp-for="productoClass.CategoriaId"></label>
                <select asp-for="productoClass.CategoriaId" class="form-control">
                    <option value="">Seleccionar una categoría</option>
                    @foreach (var categoria in Model.categorias)
                    {
                        <option value="@categoria.categoriaId">@categoria.categoriaNombre</option>
                    }
                </select>
                <input id="estado" type="checkbox" asp-for="productoClass.deleted" checked />

            </div>
            
        </div>
        <div class="contenedor2">
            @*de aqui*@
            <div class="form-group">
                <div id="previewContainer">
                    <img id="preview" src="#" alt="Vista previa de la imagen" />
                </div>
                <label for="imagen">Imagen:</label>


                <input accept="image/*" type="file" id="imagen" name="imagen" onchange="actualizarNombreImagen()">

            </div>
            @*hasta aqui*@
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Agregar</button>
    
</form>

