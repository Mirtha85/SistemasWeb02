    .btnCarrusel:hover{
        background-color:hotpink;
        color:white;
    }
    
    .nav-item:hover {
        background-color: rgba(255, 255, 255, 0.31);
    }
</style>

<script>
    var carousel = document.getElementById('carouselImages');
    var primer = document.getElementsByClassName('container-fluid');
    var submenu = document.getElementsByClassName('nav-item');
    primer[0].style.backgroundColor = 'pink';
    carousel.addEventListener('slid.bs.carousel', function (event) {
        var activeIndex = event.to;

        if (activeIndex === 0) {
            for (var i = 0; i < primer.length; i++) {
                primer[i].style.backgroundColor = 'pink';
            }
            
        } else if (activeIndex === 1) {
            for (var i = 0; i < primer.length; i++) {
                primer[i].style.backgroundColor = 'deepskyblue';
            }
        } else if (activeIndex === 2) {
            for (var i = 0; i < primer.length; i++) {
                primer[i].style.backgroundColor = 'cornflowerblue';
            }
        }
    });

    
</script>
