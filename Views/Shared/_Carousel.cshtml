<script>
    var carousel = document.getElementById('carouselImages');
    var cuadrado = document.getElementById('navegacionNav');
    var primer = document.getElementsByClassName('container-fluid');
    primer[0].style.backgroundColor = 'pink';
    
    carousel.addEventListener('slid.bs.carousel', function (event) {

        

        var activeSlide = event.relatedTarget;
        var activeIndex = Array.from(carousel.querySelectorAll('.carousel-item')).indexOf(activeSlide);
        

        cuadrado.className = 'navegacionNav';

        if (activeIndex === 0) {
            cuadrado.classList.add('rosa');
        } else if (activeIndex === 1) {
            cuadrado.classList.add('celeste');
        } else if (activeIndex === 2) {
            cuadrado.classList.add('azul');
        }
    });


</script>